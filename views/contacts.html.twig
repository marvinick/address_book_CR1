<html>
<head>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  <title>Address Book</title>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>Contacts</h2>
        <br/>
        {% if contacts is not empty %}

          {% for contact in contacts %}
            <ul>
              <h4><li>{{ contact.getName}}</li></h4>
                <ul>
                  <li>Phone Number: {{ contact.getNumber }}</li>
                  <li>Address: {{ contact.getAddress }}</li>
                </ul>
            </ul>
          {% endfor %}
        {% endif %}
        <br/>
        <form action='/delete_contacts' method='post'>
          <button type='submit' class="btn-danger btn-lg">Clear</button>
        </form>
      </div>
      <div class='col-md-6'>
      <h3>Enter New Contact</h3>
      <br/>
      <form action='/contacts' method='post'>
        <div class='form-group'>
          <h4><label for='name'>Name</label></h4>
          <input id='name' name='name' type='text'>
        </div>
        <div class='form-group'>
          <h4><label for=''>Number</label></h4>
          <input id='number' name='number' type='text'>
        </div>
        <div class='form-group'>
          <h4><label for='Address'>Address</label></h4>
          <input id='address' name='address' type='text'>
        </div>
          <button type='submit' class="btn-success btn-lg">Add</button>
      </form>
    </div>

  </div>
</body>
</html>
